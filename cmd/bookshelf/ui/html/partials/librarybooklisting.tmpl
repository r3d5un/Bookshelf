{{ block "librarybooklisting" . }}
<div id="bookList">
	{{ range .MyLibraryBooks }}
	<div class="row">
		<div class="card mb-3">
			<div class="card-body">
				<div class="row">
					<div class="col">
						<h5 class="card-title">{{ .Title }}</h5>
					</div>
					<div class="col">
						<div class="row justify-content-end">
							<div class="col-4">
								{{ if  eq .Status "Want to Read" }}
								<span class="badge text-bg-info">{{ .Status }}</span>
								{{ else if eq .Status "Reading" }}
								<span class="badge text-bg-primary">{{ .Status }}</span>
								{{ else if eq .Status "Dropped" }}
								<span class="badge text-bg-secondary">{{ .Status }}</span>
								{{ else if eq .Status "Read" }}
								<span class="badge text-bg-success">{{ .Status }}</span>
								{{ else }}
								<span class="badge text-bg-warning">Unkonwn</span>
								{{ end }}
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ range .Series }}
						<h6 class="card-title">{{ . }}</h6>
						{{ end }}
					</div>
					<div class="col">
						{{ range .Authors }}
						{{/* TODO: Add a real link to author */}}
						<h6 class="card-title" ><a hx-boost="true" hx-push-url="true"  href="/authors/1">{{ . }}</a></h6>
						{{ end }}
					</div>
					<div class="col">
						<p class="card-text">Published: {{ humanDate .Published }}</p>
						<p class="card-text">Added: {{ humanDate .Added }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{ end }}
{{ end }}
